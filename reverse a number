#test case - 123 = 321 ; -123 = -321  ; 120 = 21 
class Solution {
public:
    int reverse(int x) {
        long rev_num = 0; 
        while (x != 0) {
            int last_digit = x % 10;
            x /= 10;

            rev_num = rev_num * 10 + last_digit;

            if (rev_num > INT_MAX || rev_num < INT_MIN) {
                return 0;
            }
        }
        return (int)rev_num;
    }
};
